@model IEnumerable<Sample.CrawlerFlight>
@{
    ViewBag.Title = "Go Down To Download Excel file";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<h2>
    Go Down to Download Excel File
</h2>*@
<style>
    tr {
        border: 1px solid black; text-align: left; width: 20%; padding-left: 20px;
    }
</style>
<br />
<br />
<h3 style="color:#ad9393">
    Export Data To Excel
</h3>
@using (Html.BeginForm("ExportToExcel", "Excel", FormMethod.Post))
{
<div class="table-bordered table-hover table-striped table-responsive">
    <table style="background-color: white; width: 100%;" class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Airline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirlineCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Aircraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departs_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrives_at)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TicketPrice)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.Airline)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.AirlineCode)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.FlightNumber)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.Aircraft)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.SourceCity)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.DestinationCity)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.Departs_at)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.Arrives_at)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.Duration)
                </td>
                <td style="padding-left: 20px;">
                    @Html.DisplayFor(modelItem => item.TicketPrice)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
            </tr>
        }

    </table>
    <div>
        <td colspan="4">

            <input type="submit" value="Export to Excel" class="button btn btn-success" />
        </td>
    </div>
</div>
}
    
   
